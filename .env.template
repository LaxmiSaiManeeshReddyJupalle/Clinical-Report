# =============================================================================
# UIC ATU Clinical Report Generator - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# SECURITY: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# SMB Connection Settings
# -----------------------------------------------------------------------------
# Server hostname for UIC file share
SMB_SERVER=uicfs.server.uic.edu

# Share name on the server
SMB_SHARE=AHS-ATUSharedUIC

# Base path within the share (use forward slashes)
SMB_BASE_PATH=Services/CA/AE Digital Files

# Domain credentials (use your UIC credentials)
SMB_USERNAME=your_username
SMB_PASSWORD=your_password
SMB_DOMAIN=uic

# -----------------------------------------------------------------------------
# Azure OpenAI Settings
# -----------------------------------------------------------------------------
# Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_api_key_here

# Deployment name for your model
AZURE_OPENAI_DEPLOYMENT=gpt-4

# API version
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------------------------------------------------------------------
# Vector Database Settings (ChromaDB)
# -----------------------------------------------------------------------------
# Path for persistent ChromaDB storage
CHROMA_PERSIST_DIR=./data/chroma

# Collection name for document embeddings
CHROMA_COLLECTION=clinical_docs

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable PII scrubbing by default (true/false)
ENABLE_PII_SCRUBBING=true

# Streamlit server port
STREAMLIT_PORT=8501

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum file size for processing (in MB)
MAX_FILE_SIZE_MB=50
